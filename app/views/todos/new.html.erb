<div class="content">
<%= form_with model: @todo, url: todos_path, method: :post, class: "form-class" do |form| %>
    <div class="inputs">
    <div class="input">
    <%= form.label "Título:" %>
    <%= form.text_field :title, class: "input-bar" %>
    </div>
    <div class="input">
    <%= form.label "Descrição:" %>
    <%= form.text_field :descricao, class: "input-bar" %>
    </div>
    </div>
    <%= form.submit "Confirmar", class: 'btn btn-primary' %>
    
<% end %>
<%= link_to 'Cancelar', todos_path, class: 'btn btn-secondary', id: 'cancelar-lista' %>
</div>