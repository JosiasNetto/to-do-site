<div class="caixa-titulo"><h1 class="titulo">Minhas Listas</h1></div>

<div class="lists">
<div class="actions"> <%= link_to 'Criar uma nova Lista', new_todo_path, class: 'btn btn-primary' %></div>
<% if @todos.any? %>
    <div class="lists">
    <ul class="und-list">
        <% @todos.each do |todo|%>
            <li class="list-item">
                <div class="list-titulo">
                <strong><%= link_to todo.title, todo_metas_path(todo), class: 'todo-title'  %></strong>
                <p><%= todo.descricao != nil ? todo.descricao : "Sem descriÃ§Ã£o" %></p>
                </div>
                <div class="botoes">
                <%= form_with(model: todo, local: true, method: :delete) do |form| %>
                    <%= form.submit 'Apagar', data: { confirm: 'Tem certeza que deseja apagar este to-do?' } %>
                    <%= link_to 'Editar', edit_todo_path(todo), class: 'btn btn-primary' %>
                <% end %>
                </div>
            </li>
            <% end %>
    </ul>
    </div>
<% else %>
    <p class="lista-nada">Nenhuma lista encontrada.</p>
<% end %>
</div>